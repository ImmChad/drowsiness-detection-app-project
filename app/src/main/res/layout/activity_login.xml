<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="60px"
    tools:context=".LoginActivity">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/container_app_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/yewbbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App ID"
            android:textColor="@color/red"
            android:textSize="40sp"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:background="@drawable/bg_border_2dp_circle_20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <EditText
                android:textCursorDrawable="@null"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:layout_toEndOf="@id/btn_submit_app_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_app_ID"
                android:hint="taxixxyyzz"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColorHint="@color/red"
                />
            <Button
                app:backgroundTint="@color/red"
                android:layout_margin="0dp"
                android:layout_alignParentEnd="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_submit_app_id"
                android:text="Submit"
                android:textSize="20sp"
                android:backgroundTint="@color/red"
                android:background="@drawable/bg_red_circle_20dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_domain_api"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/yewbbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domain APi"
            android:textColor="@color/red"
            android:textSize="40sp"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:background="@drawable/bg_border_2dp_circle_20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <EditText
                android:id="@+id/edt_domain_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toEndOf="@id/btn_submit_domain_api"
                android:background="@null"
                android:text="https://taxi-monaco.pixodeo.net/"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:textCursorDrawable="@null"
                android:textSize="25sp"

                />

            <Button
                android:id="@+id/btn_submit_domain_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/bg_red_circle_20dp"
                android:backgroundTint="@color/red"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Submit"
                android:textSize="20sp"
                app:backgroundTint="@color/red" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>